<Window x:Class="Viscera_Cleanup_DJ.MessengerBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viscera_Cleanup_DJ"
        mc:Ignorable="d"
        Title="Popup" Height="218" Width="460" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" MinWidth="300" MinHeight="160" SizeToContent="Height" ResizeMode="NoResize">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="ButtonStack" Height="50" Margin="0" VerticalAlignment="Bottom" Background="#FFF0F0F0" Orientation="Horizontal" IsManipulationEnabled="True" FlowDirection="RightToLeft" FocusManager.IsFocusScope="True"/>
        <TextBlock x:Name="Message" Margin="33,33,33,90" TextWrapping="Wrap" FontSize="14"/>

    </Grid>
</Window>
