<Window x:Class="Viscera_Cleanup_DJ.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viscera_Cleanup_DJ"
        mc:Ignorable="d"
        Title="Settings" WindowStartupLocation="CenterOwner" MinWidth="300" MinHeight="200" ShowInTaskbar="False" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Width="500" Height="201">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="gamePath" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" VerticalContentAlignment="Center"/>
        <Button x:Name="gamePathBrowseButton" Content="Browse..." HorizontalAlignment="Left" Margin="415,41,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="gamePathBrowseButton_Click"/>
        <Label x:Name="label" Content="Game Install Location" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="480" Padding="0,5,5,5"/>
        <ComboBox x:Name="groupMask" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="230" IsEditable="True" SelectedIndex="0">
            <ComboBoxItem Content="(No group)"/>
            <ComboBoxItem Content="Viscera"/>
            <ComboBoxItem Content="Santa"/>
        </ComboBox>
        <Label x:Name="label1" Content="Group Mask" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Padding="0,5,5,5" Width="230"/>
        <StackPanel HorizontalAlignment="Left" Height="50" Margin="0,151,0,0" VerticalAlignment="Top" Width="500" Background="#FFF0F0F0" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="saveButton" Content="Save Settings" Margin="10" Padding="12,1" Click="SaveButton_Click"/>
        </StackPanel>
        <Label x:Name="label1_Copy" Content="Package Name" HorizontalAlignment="Left" Margin="260,69,0,0" VerticalAlignment="Top" Padding="0,5,5,5" Width="230"/>
        <TextBox x:Name="packageName" HorizontalAlignment="Left" Height="22" Margin="260,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" MaxLines="1" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
